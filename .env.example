# OmniTalk Environment Variables
# Copy this file to .env and fill in your values

# Deepgram API Key for Speech-to-Text
# Get your key at https://console.deepgram.com
EXPO_PUBLIC_DEEPGRAM_API_KEY=your_deepgram_api_key_here

# WebSocket Server URL for real-time communication
EXPO_PUBLIC_WEBSOCKET_URL=ws://localhost:8080

# Sign Language Detection Backend URL
# Points to the FastAPI WebSocket server in backend/
EXPO_PUBLIC_SIGN_BACKEND_URL=ws://localhost:8080/ws

# App Configuration
EXPO_PUBLIC_APP_NAME=OmniTalk
EXPO_PUBLIC_MAX_SPEAKERS=4
